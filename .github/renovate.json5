{
  extends: ['sparhomenko/renovate-config'],
  'helm-values': {
    fileMatch: ['\\.yaml$']
  },
  regexManagers: [
    {
      fileMatch: ['\\.yaml$'],
      matchStrings: ['\\s*chart:\\s+(?<depName>.+?)\\s*\n\\s*version:\\s+(?<currentValue>.+?)\\s+#\\s*(?<registryUrl>.+?)\\s*\n'],
      datasourceTemplate: 'helm'
    }
  ],
  packageRules: [
    {
      matchManagers: ['helm-values'],
      matchPackagePrefixes: ['ghcr.io/linuxserver/'],
      matchDatasources: ['docker'],
      versioning: 'regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)-.*-ls(?<revision>\\d+)$',
      automerge: false
    }
  ]
}
